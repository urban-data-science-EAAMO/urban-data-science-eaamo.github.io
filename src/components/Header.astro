---
import { LOGO_IMAGE, SITE } from "@config";
import LinkButton from "./LinkButton.astro";

export interface Props {
  activeNav?: "posts" | "tags" | "search" | "cv";
}

const { activeNav } = Astro.props;
---

<header id="main-header">
  <a id="skip-to-content" href="#main-content">Skip to content</a>
  <div class="nav-container">
    <div class="top-nav-wrap">
      <div class="left-nav-section">
        <a href="/" class="logo site-logo whitespace-nowrap" id="header-logo">
          {
            LOGO_IMAGE.enable ? (
              <img
                src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
                alt={SITE.title}
                width={LOGO_IMAGE.width}
                height={LOGO_IMAGE.height}
              />
            ) : (
              "EAAMO UDS Working Group"
            ) 
          }
        </a>
        
      </div>
      <nav id="nav-menu">
        <button
          class="hamburger-menu focus-outline"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="menu-icon"
          >
            <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
            <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
            <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
            <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
            <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
          </svg>
        </button>
        <ul id="menu-items">
          <li>
            <a href="/events/" class="">
              TALKS
            </a>
          </li>
          <li>
            <a href="/publications/" class="">
              READING LIST
            </a>
          </li>
          <li>
            <a href="/join/" class="">
              JOIN US
            </a>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li>
                <button
                  id="theme-btn"
                  class="focus-outline"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
                    <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                  </svg>
                  <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
                    <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                  </svg>
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  .left-nav-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .brain-link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    opacity: 0.8;
  }
  
  .brain-link:hover {
    opacity: 1;
    transform: scale(1.05);
    background-color: rgba(99, 102, 241, 0.1);
  }
  
  .brain-icon {
    display: block;
    filter: brightness(0.9);
    transition: filter 0.2s ease;
  }
  
  .brain-link:hover .brain-icon {
    filter: brightness(1.1);
  }
  
  /* Mobile responsiveness */
  @media (max-width: 640px) {
    .left-nav-section {
      gap: 0.75rem;
    }
    
    .brain-link {
      padding: 0.375rem;
    }
    
    .brain-icon {
      width: 28px;
      height: 28px;
    }
  }
</style>

<script>
  // Mobile menu functionality
  document.addEventListener('astro:page-load', () => {
    const hamburgerBtn = document.querySelector('.hamburger-menu');
    const menuItems = document.querySelector('#menu-items');
    const menuLinks = menuItems?.querySelectorAll('a, button');
    const menuIcon = document.querySelector('.menu-icon');
    
    // Check if we're in mobile view
    const isMobile = () => window.innerWidth < 640;
    
    // Toggle menu function (only for mobile)
    const toggleMenu = () => {
      if (!isMobile()) return;
      
      const isCurrentlyOpen = menuItems?.classList.contains('show');
      
      if (isCurrentlyOpen) {
        // Close menu
        menuItems?.classList.remove('show');
        menuIcon?.classList.remove('is-active');
        hamburgerBtn?.setAttribute('aria-expanded', 'false');
        hamburgerBtn?.setAttribute('aria-label', 'Open Menu');
      } else {
        // Open menu
        menuItems?.classList.add('show');
        menuIcon?.classList.add('is-active');
        hamburgerBtn?.setAttribute('aria-expanded', 'true');
        hamburgerBtn?.setAttribute('aria-label', 'Close Menu');
      }
    };
    
    // Initialize menu state
    const initializeMenu = () => {
      if (isMobile()) {
        // Mobile: start with menu closed
        menuItems?.classList.remove('show');
        menuIcon?.classList.remove('is-active');
        hamburgerBtn?.setAttribute('aria-expanded', 'false');
        hamburgerBtn?.setAttribute('aria-label', 'Open Menu');
      } else {
        // Desktop: ensure menu is accessible
        menuItems?.classList.remove('show');
        menuIcon?.classList.remove('is-active');
        hamburgerBtn?.setAttribute('aria-expanded', 'false');
        hamburgerBtn?.setAttribute('aria-label', 'Open Menu');
      }
    };
    
    // Initialize on load
    initializeMenu();
    
    // Add click event to hamburger button
    hamburgerBtn?.addEventListener('click', e => {
      e.stopPropagation();
      if (isMobile()) {
        toggleMenu();
      }
    });
    
    // Close menu when clicking anywhere else (mobile only)
    document.addEventListener('click', e => {
      if (!isMobile()) return;
      
      const target = e.target as Node;
      const isMenuOpen = menuItems?.classList.contains('show');
      
      if (isMenuOpen && 
          menuItems && 
          !menuItems.contains(target) && 
          hamburgerBtn && 
          !hamburgerBtn.contains(target)) {
        toggleMenu();
      }
    });
    
    // Close menu when a menu item is clicked (mobile only)
    menuLinks?.forEach(link => {
      link.addEventListener('click', () => {
        if (isMobile() && menuItems?.classList.contains('show')) {
          toggleMenu();
        }
      });
    });
    
    // Handle resize - reinitialize menu state
    window.addEventListener('resize', () => {
      initializeMenu();
    });
    
    // Handle escape key to close menu (mobile only)
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape' && isMobile() && menuItems?.classList.contains('show')) {
        toggleMenu();
        (hamburgerBtn as HTMLElement)?.focus();
      }
    });
  });
</script>

